  height: 132rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom:2rpx solid #eee;
}
.address-item:last-child{
  border-bottom: none;
}
.address-item .detail{
  color: #333;
  font-size: 30rpx;
  margin-bottom: 10rpx;
