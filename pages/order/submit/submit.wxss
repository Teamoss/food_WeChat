/* 提交 */
.submit{
  position: fixed;
  width: 100%;
  bottom: 0;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  background:#4dab33;
}



/* 弹窗 */
.modal-screen{
  position:fixed;
  width:100%;
  height:100%;
  top:0;
  background:rgba(0,0,0,.5);
  z-index: 1;
}
.modal-window{
  position:absolute;
  background:#fff;
  width:100%;
  z-index:1;
}
.modal-title{
  background:#f8f8f8;
  height:80rpx;
  line-height:80rpx;
  display: flex;
}
.modal-title .cancel{
  position:absolute;
  color: #333;
  font-size: 30rpx;
  margin-left: 20rpx;
}
.modal-title .center{
  flex:1;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}