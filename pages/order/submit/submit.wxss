page{
  height:100%;
  overflow-y:hidden;
}
.submitView{
  overflow:scroll;
  height:100%;
}
.tab{
  display: flex;
  padding:20rpx 20rpx 0 20rpx;
  background: #f4f4f4;
  overflow: hidden;
}
.tab>view{
  flex: 1;
  position: relative;
  height: 70rpx;
  text-align: center;
  font-size: 30rpx;
  color: #2d2d2d;
  line-height: 70rpx;
  background: linear-gradient(to top,#f1f1f1,#f9f9f9);
  border-top: 2rpx solid #eeeeee;
}
.tab view:last-child{
  box-shadow:10rpx -1rpx 10rpx -8rpx #ccc;
}
.tab view:first-child{
  box-shadow:-10rpx -1rpx 10rpx -8rpx #ccc;
}
.tab .tab-left{
  flex: 1;
  background: #fff;
  margin-top: -7rpx;
  height: 80rpx;
  border-top: none;
  box-shadow: none !important;
}
.tab .tab-right{
  flex: 1;
  background: #fff;
  margin-top: -7rpx;
  height: 80rpx;
  border-top: none;
  box-shadow: none !important;
}
 .tab-left::after{
  content: '';
  display: block;
  position: absolute;
  right: -20rpx;
  top: 0;
  width: 70rpx;
  height: 80rpx;
  background: #fff;
  transform: skewX(30deg);
  z-index: 1;
} 
.tab-right::before{
  content: '';
  display: block;
  position: absolute;
  left: -20rpx;
  top: 0;
  width: 70rpx;
  height: 80rpx;
  background: #fff;
  transform: skewX(-30deg) 
}
.tab-content{
  margin:0 20rpx;
  box-shadow:-1rpx 10rpx 30rpx -10rpx #ccc;
  font-size: 0;
}
.tab-content .black3-28:first-child{
  margin: 40rpx 0 14rpx 20rpx;
}
.tab-content view:last-child{
  padding-bottom: 30rpx;
  box-sizing: border-box;
}
.tab-content .black3-40{
  margin-bottom: 26rpx;
  margin-left: 20rpx;
}
.tab-content-item{
  position: relative;
  height: 104rpx;
  line-height: 104rpx;
  font-size: 34rpx;
  margin: 0 25rpx;
  border-bottom: 2rpx solid #eee;
  color: #333;
}
.tab-content-item:last-child{
  border-bottom: none;
}
.tab-content-item::after{
  content: '';
  display: block;
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -10rpx;
  border-top: 4rpx solid #ccc;
  border-right: 4rpx solid #ccc;
  width: 20rpx;
  height: 20rpx;
  transform: rotate(45deg);
}
.tab-content .address{
  height:144rpx;
  background:#fff;
  padding:20rpx;
}
.tab-content .address .addr{
  color: #333;
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.tab-content .name{
  font-size:30rpx;
  color:#666;
  margin-right:20rpx;
}

/* 已点商品  */
.content{
  margin-top: 16rpx;
}
.content-title{
  padding-left: 20rpx;
  height: 100rpx;
  margin: 0 20rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #000;
  background: #fff;
}
.content-title image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 10rpx;
}
.prodList{
  overflow: hidden;
  transition: height .5s;
}
.prodItem{
  display: flex;
  margin-bottom: 10rpx;
}
.prodItem .item-left{
  margin: 20rpx 20rpx 0 20rpx;
}
.prodItem .item-left image{
  width: 112rpx;
  height: 112rpx;
}
.prodItem .item-center{
  flex: 1;
  margin-top: 12rpx;
}
.prodItem .item-right{
  margin-top: 12rpx;
  margin-right: 26rpx
}
/* 查看更多按钮  */
.slideDown, 
.slideUp{
  color:#999;
  font-size:26rpx;
  border:2rpx solid #999;
  width:140rpx;
  text-align:center;
  padding:10rpx;
  margin:34rpx auto 30rpx;
}
.slideDown::after{
  content: '';
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  margin:0 10rpx;
  border-top:4rpx solid #666;
  border-right: 4rpx solid #666;
  vertical-align: text-top;
  margin-top: 14rpx;
  transform: rotate(-45deg); 
}
.slideUp::after{
  content: '';
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  margin:0 10rpx;
  border-top:4rpx solid #666;
  border-left: 4rpx solid #666;
  vertical-align: text-top;
  margin-top: 10rpx;
  transform: rotate(225deg);
}
.flex-layout{
  display: flex;
  background:#fff;
  padding:0 20rpx;
  margin: 0 20rpx;
  box-sizing:border-box;
  height:60rpx;
  line-height:60rpx;
}
.flex-layout:last-child{
  margin-bottom: 150rpx;
}
.flex-layout>view{
  flex: 1;
  color: #333;
  font-size: 30rpx;
}
.left{
  text-align: left;
}
.right{
  text-align: right;
}
