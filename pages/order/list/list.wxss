page {
  height: 100%;
}

.order-item {
  background: #fff;
  padding: 0 20rpx;
  margin-bottom: 25rpx;
}

.order-item-head {
  display: flex;
  height: 50rpx;
  align-items: center;
  border-bottom: 2rpx solid #eee;
}

.order-item-head image {
  width: 60rpx;
  height: 60rpx;
  margin: 0 16rpx 0 0rpx;
}

.order-item-head .storeName {
  color: #333;
  font-size: 26rpx;
  flex: 1;
}

.order-item-head .orderStatu {
  color: #ec1f1f;
  font-size: 26rpx;
}
.order-item-head .orderStatu1 {
  color: rgb(10, 149, 241);
  font-size: 26rpx;
}
.order-item-head .orderStatu2 {
  color: rgb(10, 241, 153);
  font-size: 26rpx;
}

.listing {
  padding-left: 20rpx;
  padding-top: 10rpx;
  box-sizing: border-box;
  color: #666;
  font-size: 30rpx;
}

.listing>view {
  display: flex;
  line-height: 60rpx;
}

.listing>view>text {
  display: block;
  flex: 1;
}

.right {
  text-align: right;
  font-size: 24rpx
}

.total {
  text-align: right;
  color: #666;
  /* font-size: 30rpx; */
  /* border-bottom: 2rpx solid #eee; */
  padding-bottom: 10rpx;
}

.order-item-buttom {
  display: flex;
  box-sizing: border-box;
  flex-direction: row-reverse;
  /* justify-content: space-between; */
  align-items: center;
}

.order-item-buttom view {
  display: inline-block;
  height: 60rpx;
  width: 120rpx;
  line-height: 60rpx;
  vertical-align: middle;
  margin: 10rpx 0;
  color: #333;
  font-size:26rpx;
  text-align: center;
  margin-left: 20rpx;
}

.order-item-buttom .yellow {
  background: #f7d373;
  border-radius: 10rpx
}

.food {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx
}

.noMore {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}

.order {
  font-size: 24rpx;
  color: #999;
}

.logo {
  width:50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.foodItem {
  margin-bottom: 10rpx
}

.orderView {
  padding-top:10rpx ;
  padding-bottom: 10rpx
}

.sumMoney {
  font-size: 24rpx
}

