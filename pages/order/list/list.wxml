<scroll-view scroll-y="true" style="height: 100%;" bindscrolltolower="scrolltolower" bindscroll="scroll" scroll-into-view="{{toView}}" lower-threshold="100">

  <view class='order-list'>
    <view class='order-item' wx:for="{{orderList}}" wx:key="{{index}}">
      <view class='order-item-head'>
        <image src='{{item.logo}}' class="logo" />
        <view class='storeName'>{{item.businessName}}</view>
        <block>
          <view wx:if="{{item.status==0}}" class='orderStatu'>待接单</view>
          <view wx:elif="{{item.status==1}}" class='orderStatu1'>商家已接单</view>
          <view wx:else class='orderStatu2'>订单已完成</view>
        </block>
      </view>
      <view class='listing'>
        <view wx:for="{{item.food}}" wx:for-item="foodItem" wx:key="{{index}}" >
          <image class="food" src='{{foodItem.imageUrl}}' />
          <text>{{foodItem.name}}</text>
          <text class='right'>x{{foodItem.number}}  ￥{{foodItem.price}}</text>
        </view>
      </view>
      <view class='total'>
        <text>总计{{item.sumMoney}}元</text>
      </view>
      <view class='order-item-buttom'>
        <text class="order">订单号: {{item._id}}</text>
        <block>
          <view wx:if="{{item.status==1}}" class='yellow'  catchtap="finishOrder" data-item="{{item}}">确认收货</view>
          <view wx:elif="{{item.status==2}}" class='yellow' catchtap="toComment" data-item="{{item}}">去评价</view>
        </block>
      </view>
    </view>
  </view>

  <view class="noMore" wx:if="{{noMore}}">
    <text class="content">没有更多了。。</text>
  </view>
  <view class="noMore" wx:if="{{loadingMore}}">
    <image src="../../../images/icon/loading.gif" class="loading"></image>
  </view>
</scroll-view>