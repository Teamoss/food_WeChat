page {
  height: 100%;
}

.bg {
  background-color: #fff;
  height: 100%;
  position: relative;
}

.container {
  background-color: #fff;
  height: 100%;
  padding: 30rpx;
}

.flexRow {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.rightCir {
  width: 30rpx;
  height: 30rpx;
}

.transform {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(90deg);
}

.address {
  color: black;
  font-weight: bold;
  font-size: 34rpx;
}

.name {
  color: #999;
}

.marginBottom {
  margin-bottom: 5rpx;
}

.line {
  width: 100%;
  height: 4rpx;
  background-color: #f5f5f5;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.time {
  color: skyblue;
  margin-right: 10rpx;
}

.cashView {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background-color: #f7d373;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cashLeft {
  flex: 2;
  height: 100%;
  display: flex;
  align-items: center;
}

.cashRight {
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cashR {
  padding: 20rpx;
  background-color: rgb(10, 149, 241);
  text-align: center;
  border-radius: 10rpx;
  width: 60%;
}

.cashText {
  color: #eee;
}

.text {
  margin-left: 50rpx;
  font-size: 32rpx;
}

.money {
  color: rgb(240, 9, 9);
  font-size: 36rpx;
}

.list {
  margin-top: 30rpx;
  margin-bottom: 150rpx;
}

.foodImg {
  width: 100rpx;
  height: 100rpx;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
}

.itemView {
  margin-bottom: 20prx;
  margin-top: 20rpx;
}

.food {
  margin-left: 30rpx;
  color: rgb(32, 23, 23);
}

.number {
  margin-left: 280rpx;
  color: #333;
}

.price {
  margin-left: 30rpx;
  color: rgb(32, 23, 23);
}

.listAdress {
  margin-top: 10rpx;
}

.adressItem {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}

.selectIcon {
  width: 30rpx;
  height: 30rpx;
}

.selectView {
  width: 40rpx;
  height: 40rpx;
  background-color: #f7d373;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  border-radius: 50%;
}

.noSelectView {
  width: 40rpx;
  height: 40rpx;
  background-color: #c1c1c1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  border-radius: 50%;
}

.orderLeft {
  width: 70%
}

.orderRight {
  width: 30%
}

