page {
  height: 100%;
  background-color: #fff;
}

.container {
  display: flex;
  width: 100%;
  padding-top: 200rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.order {
  width: 130rpx;
  height: 130rpx;
}

.rightView {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 36rpx;
  color: #facd51;
  margin-bottom: 15rpx;
}

.orderNumber {
  font-size: 30rpx;
  color: #999;
}

.money {
  font-size: 30rpx;
  color: red;
}

.viewbtn {
  width: 100%;
  margin-top: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn {
  width: 80%;
  height: 100rpx;
  background-color: #f7d373;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.text {
  color:#fff;
  font-size: 36rpx
}
