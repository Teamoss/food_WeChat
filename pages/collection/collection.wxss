page{
  height: 100%;
  background-color: #fff
}
.marginTop {
  margin-top: 10rpx;
}
.item {
  display: flex;
  /* align-items: center; */
  padding: 20rpx;
  background-color: white;
  height: 100%;
}
.image {
  width: 170rpx;
  height: 170rpx;
  flex: 2;
  border-radius: 5rpx;
}

.message {
  margin-left: 20rpx;
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.noMore {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}

.content {
  color: gray;
  font-size: 26rpx;
}
.loading {
  width: 60rpx;
  height: 60rpx;
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.flex {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 5rpx;
}