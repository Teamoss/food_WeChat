page {
  height: 100%;
}

.container {
  background: #fff;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-top: 20rpx;
  padding-top: 10rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 'bold';
}

.marginTop {
  margin-top: 10rpx;
}

.item {
  display: flex;
  /* align-items: center; */
  padding: 20rpx;
  background-color: white;
  height: 100%;
}

.image {
  width: 200rpx;
  height: 200rpx;
  flex: 2;
  border-radius: 5rpx;
}

.message {
  margin-left: 20rpx;
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.flex {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.icon {
  width: 32rpx;
  height: 32rpx;
}

.number {
  color: orangered;
  margin-left: 6rpx;
}

.content {
  color: gray;
  font-size: 26rpx;
}

.noMore {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.loading {
  width: 60rpx;
  height: 60rpx;
}

.saleNumber {
  color: #999999;
  margin-left: 300rpx;
  font-size: 28rpx
}
