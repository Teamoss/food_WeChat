page {
  height: 100%;
  background-color: #fff;
}

.head {
  padding-top: 30rpx;
  display: flex;
  align-items: center;
}

.logo {
  width: 80rpx;
  height: 80rpx;
  margin-left: 30rpx;
}

.business {
  margin-left: 20rpx;
  font-size: 32rpx;
}

.itembox {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.scorePin {
  font-size: 26rpx;
  font-weight: 600;
}

.star {
  width: 50rpx;
  height: 50rpx;
  margin: 0 5rpx;
  vertical-align: middle;
}

.section {
  padding: 30rpx;
}

.btn {
  background-color: #f7d373;
  border-radius: 20rpx
}
